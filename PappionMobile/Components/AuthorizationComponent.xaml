<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PappionMobile.Components.AuthorizationComponent"
             HeightRequest="211" BackgroundColor="White">
    <StackLayout Margin="30" Spacing="23">
        <Button Style="{StaticResource EmptyBtnStyle}"
                Text="Увійти"
                HeightRequest="54"
                WidthRequest="287"
                TextColor="#282E6A"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontAttributes="Bold"/>
        <Button 
                Style="{StaticResource EmptyBtnStyle}"
                Text="Зареєструватися"
                HeightRequest="54"
                WidthRequest="287"
                TextColor="#282E6A"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontAttributes="Bold"
                Clicked="Button_Clicked"/>
    </StackLayout>
</ContentView>
